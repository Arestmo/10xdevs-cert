---
/**
 * Login Layout
 *
 * Main layout for the login page containing all authentication components.
 * Displays logo, heading, Google OAuth button, separator, magic link form, and legal links.
 */

import { Image } from "astro:assets";
import { GoogleOAuthButton } from "@/components/auth/GoogleOAuthButton";
import { MagicLinkForm } from "@/components/auth/MagicLinkForm";
import LegalLinks from "@/components/LegalLinks.astro";
import logo from "@/assets/logo.png";
import "@/styles/global.css";

interface Props {
  error?: string | null;
}

const { error } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Zaloguj się do Flashcards AI - efektywna nauka z fiszkami wspieranymi przez sztuczną inteligencję"
    />
    <meta name="robots" content="noindex, nofollow" />
    <link rel="icon" type="image/png" href="/logo.png" />
    <title>Logowanie - Flashcards AI</title>
  </head>
  <body class="bg-background min-h-screen min-w-screen">
    <main class="container mx-auto flex min-h-screen items-center justify-center px-4 py-8">
      <div class="w-full max-w-md space-y-8">
        <!-- Logo -->
        <div class="flex justify-center">
          <Image src={logo} alt="Flashcards AI" class="h-24 w-auto" width={536} height={482} loading="eager" />
        </div>

        <!-- Heading -->
        <div class="text-center">
          <h1 class="text-3xl font-bold tracking-tight">Zaloguj się do Flashcards AI</h1>
          <p class="text-muted-foreground mt-2 text-sm">Efektywna nauka z fiszkami wspieranymi przez AI</p>
        </div>

        <!-- Error Alert (if present) -->
        {
          error && (
            <div class="border-destructive/50 bg-destructive/10 rounded-lg border p-4">
              <p class="text-destructive text-sm">
                {error === "auth_failed" ? "Nie udało się uwierzytelnić. Spróbuj ponownie." : decodeURIComponent(error)}
              </p>
            </div>
          )
        }

        <!-- Google OAuth Button -->
        <GoogleOAuthButton client:load />

        <!-- Separator -->
        <div class="relative my-5">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t"></div>
          </div>
          <div class="relative flex justify-center text-xs uppercase">
            <span class="bg-background text-muted-foreground px-2"> lub </span>
          </div>
        </div>

        <!-- Magic Link Form -->
        <MagicLinkForm client:load />

        <!-- Legal Links -->
        <LegalLinks />
      </div>
    </main>
  </body>
</html>
