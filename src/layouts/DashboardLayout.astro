---
/**
 * Dashboard Layout
 *
 * Main layout for authenticated users displaying the app header and main content.
 * Used across all authenticated pages (dashboard, deck details, study session).
 */

import { AppHeader } from "@/components/AppHeader";
import "@/styles/global.css";

interface Props {
  userEmail?: string;
}

const { userEmail } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Flashcards AI - efektywna nauka z fiszkami wspieranymi przez sztuczną inteligencję"
    />
    <link rel="icon" type="image/png" href="/logo.png" />
    <title>Dashboard - Flashcards AI</title>
  </head>
  <body class="bg-background min-h-screen">
    <AppHeader userEmail={userEmail} client:idle />

    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>
  </body>
</html>
