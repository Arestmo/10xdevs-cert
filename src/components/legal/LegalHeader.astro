---
/**
 * Legal Header Component
 *
 * Nagłówek strony prawnej z linkiem powrotu.
 * Minimalistyczny design pozwalający na skupienie się na treści dokumentu.
 */
---

<header class="mb-8">
  <nav>
    <button
      id="back-button"
      class="group text-muted-foreground hover:text-foreground inline-flex items-center gap-2 text-sm transition-colors"
      aria-label="Powrót do poprzedniej strony"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="transition-transform group-hover:-translate-x-1"
        aria-hidden="true"
      >
        <path d="m15 18-6-6 6-6"></path>
      </svg>
      <span>Powrót</span>
    </button>
  </nav>
</header>

<script>
  /**
   * Obsługa nawigacji wstecz
   * Jeśli istnieje historia przeglądania, wraca do poprzedniej strony
   * W przeciwnym razie przekierowuje do dashboardu
   */
  const backButton = document.getElementById("back-button");

  if (backButton) {
    backButton.addEventListener("click", () => {
      if (window.history.length > 1 && document.referrer) {
        window.history.back();
        return;
      }
      window.location.href = "/dashboard";
    });
  }
</script>
